{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ingestion",
            "type": "python",
            "request": "launch",
            "module": "galactic_rag.ingestion.ingestion",
            "justMyCode": false,
            "args": [
                "--recreate",
                "--limit",
                "1",
                "--docling-json-dir",
                "data/docling_json"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug RAG answer",
            "type": "debugpy",
            "request": "launch",
            "module": "galactic_rag.run_questions",
            "justMyCode": false,
            "args": [
                "answer",
                "--questions-file",
                "Dataset/domande.csv",
                "--output-file",
                "submission_debug.csv",
                "--limit",
                "3",
                "--top-k",
                "6"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
